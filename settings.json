// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "default_width": 140,
    "version": "2"
  },
  "icon_theme": "Material Icon Theme",
  "base_keymap": "VSCode",
  "telemetry": {
    "metrics": false
  },
  "ui_font_family": "Noto Sans",
  "ui_font_size": 15,
  "ui_font_fallbacks": ["Zed Plex Sans"],
  "buffer_font_family": "Monaspace Neon Frozen",
  "buffer_font_fallbacks": ["Monaspace Neon", "Fira Code", "Noto Sans Mono"],
  "buffer_font_size": 17.0,
  "buffer_line_height": { "custom": 1.6 },
  "buffer_font_features": {
    "calt": true,
    "liga": true,
    "ss01": true,
    "ss02": true,
    "ss03": true,
    "cv01": 0
  },
  "tabs": { "file_icons": true },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Proto Monokai V"
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/.idea"
  ],
  "indent_guides": {
    "active_line_width": 2
  },
  "tab_size": 2,
  "terminal": {
    "font_size": 14,
    "button": true
  },
  "project_panel": {
    "indent_size": 14,
    "indent_guides": { "show": "never" },
    "entry_spacing": "comfortable"
  },
  "chat_panel": {
    "default_width": 120
  },
  "languages": {
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TSX": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    }
  }
}
